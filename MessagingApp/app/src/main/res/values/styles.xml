<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="EditTextLoginActivityDef">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:ems">10</item>
    </style>

    <style name="EditTextLoginActivity" parent="EditTextLoginActivityDef"></style>

    <style name="MessagesTextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MessagesTextViewSender" parent="MessagesTextView">
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="MessagesTextViewReceiver" parent="MessagesTextView">
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">4dp</item>
    </style>

    <style name="MessagesImageViewLoadingDef">
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_height">15dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:contentDescription">@string/loadingWheel</item>
        <item name="android:src">@drawable/loading_spinner</item>
    </style>

    <style name="MessagesImageViewLoading" parent="MessagesImageViewLoadingDef">
        <item name="android:layout_marginRight">8dp</item>
    </style>

</resources>
